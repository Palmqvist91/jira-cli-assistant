{
  "name": "jira-cli-assistant",
  "version": "1.0.0",
  "description": "A CLI tool to interact with JIRA API using TypeScript",
  "main": "src/index.ts",
  "scripts": {
    "start": "npx ts-node src/server/index.ts",
    "jira:projects": "npx ts-node -r tsconfig-paths/register src/server/index.ts projects",
    "jira:issues": "npx ts-node -r tsconfig-paths/register src/server/index.ts list",
    "jira:create": "npx ts-node -r tsconfig-paths/register src/server/index.ts create",
    "jira:update": "npx ts-node -r tsconfig-paths/register src/server/index.ts update",
    "jira:delete": "npx ts-node -r tsconfig-paths/register src/server/index.ts delete",
    "jira:comment": "npx ts-node -r tsconfig-paths/register src/server/index.ts comment"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "inquirer": "^12.4.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^18.19.75",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "jira",
    "typescript",
    "cli"
  ],
  "author": "Thomas Palmqvist",
  "license": "MIT"
}