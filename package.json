{
  "name": "jira-cli-assistant",
  "version": "1.0.0",
  "description": "A new Express project with TypeScript",
  "main": "src/server/index.ts",
  "scripts": {
    "test": "npx jest --detectOpenHandles",
    "start": "ts-node ./src/index.ts",
    "dev": "npx nodemon --exec ts-node src/server/index.ts",
    "tailwind:watch": "npx tailwindcss -i ./src/client/views/public/styles/input.css -o ./src/client/views/public/styles/output.css --watch",
    "tailwind:compile": "npx tailwindcss -i ./src/client/views/public/styles/input.css -o ./src/client/views/public/styles/output.css",
    "db:make": "DB_TYPE=postgres npx typeorm-ts-node-commonjs migration:create ./src/server/database/migration/$MIGRATION",
    "db:generate": "DB_TYPE=postgres npx typeorm-ts-node-commonjs migration:generate $MIGRATION -d ./data-source.ts",
    "db:show": "DB_TYPE=postgres npx typeorm-ts-node-commonjs migration:show -d data-source.ts",
    "db:migrate": "DB_TYPE=postgres npx typeorm-ts-node-commonjs migration:run --dataSource ./data-source.ts",
    "db:revert": "DB_TYPE=postgres npx typeorm-ts-node-commonjs migration:revert -d ./data-source.ts",
    "db:drop": "npx typeorm-ts-node-commonjs schema:drop --dataSource ./data-source.ts"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.1",
    "inquirer": "^12.4.1",
    "pg": "^8.13.1",
    "typeorm": "^0.3.15",
    "typeorm-typedi-extensions": "^0.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.14",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^18.19.75",
    "jest": "^27.4.7",
    "nodemon": "^3.1.9",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "express",
    "typescript",
    "template",
    "tailwindcss",
    "typeorm"
  ],
  "author": "PrHiGo",
  "license": "MIT"
}
